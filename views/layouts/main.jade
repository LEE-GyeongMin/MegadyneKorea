mixin stylesheet(url)
	link(type="text/css", rel="stylesheet", href=url)

mixin script(url)
	script(src=url)

mixin banner(imgSrc)
	div.banner
		img.boxShadow(src=imgSrc)

mixin article(title)
	div.article
		h1.title= title
		block

doctype html
html
	head
		base(href="/")
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="format-detection", content="telephone=no")
		block title
			title Megadyne Korea
		+stylesheet("/stylesheets/layout.css")
		block links
	body
		include ../includes/header.jade
		div.main
			block body
		include ../includes/footer.jade

		block scripts

