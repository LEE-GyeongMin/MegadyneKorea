// Variables
//=================================================
bodyWidth = 1000

numOfSlides = 4

// MAP
//=================================================
.root_daum_roughmap .wrap_map
	pointer-events: none

// GLOBAL
//=================================================
body > .main
	.container
		position: relative
		width: (bodyWidth) px
		margin: 0 auto

	.boxShadow
		box-sizing: border-box
		border: 1px solid #ccc
		border-top: none
		border-bottom-color: #bbb
		box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.3);

	.boxShadow.border
		border: 1px solid #e50005

	.border
		border: 1px solid #e50005
		box-sizing: border-box

	.title
		font-size: 32px
		color: #e50005

	.subtitle
		font-size: 20px
		color: #e50005

	.title.center,
	.subtitle.center
		text-align: center

	.title.paddingVertical,
	.subtitle.paddingVertical
		padding: 30px 0 15px 0

	.text
		font-size: 16px
		text-align: justify

	a.imageLink
		font-size: 0

	ol,
	ul
		margin-bottom: 16px
		padding: 0 0 0 30px

		color: #333
		font-size: 16px
		line-height: 32px
		text-align: justify
		
		ul
			margin-bottom: 10px
	
	ol table,
	ul table
		line-height: normal
	
	ol
		list-style-type: decimal
		> li
			margin-bottom: 10px
	ul
		list-style-type: disc
	
	ul.square
		list-style-type: square

	table.twoRows td
		width: (100 / 2) %
	table.threeRows td
		width: (100 / 3) %
	table.fourRows td
		width: (100 / 4) %
	table.fiveRows td
		width: (100 / 5) %

	.horizontalList
		text-align: center
		font-size: 0
	.horizontalList > *
		display: inline-block
		position: relative

	.horizontalList.twoRows > *
		width: (100 / 2) %
	.horizontalList.threeRows > *
		width: (100 / 3) %
	.horizontalList.fourRows > *
		width: (100 / 4) %
		
	.horizontalList .label
		position: absolute
		width: 100%
		height: 30px
		bottom: 0px
		
		background-color: #2a2a2a

		font-size: 16px
		text-align: center

		color: #ff2e2e

		.verticalAligner
			display: inline
			width: 0px
			height: 100%
			margin-top: 3px
			vertical-align: middle
	
	.colorRed
		color: #ef0005

// Product Browser
//=================================================
	.productBrowser
		position: absolute
		width: 100%
		height: 180px
		top: 0
		left: 0
		background: url("/images/products/bg-product-browser.png")

// Banner
//=================================================
	.banner
		width: 100%
		height: 300px
		padding: 0 0 15px 0
		img
			width: 100%
			height: 100%

// Article
//=================================================
	.article
		position: relative
		padding: 15px 100px
		.title,
		.subtitle,
		.text
			line-height: 32px
		.title
			padding: 5px 0 15px 0
			text-align: center
		.text
			color: #333

// label-image--box
//=================================================
	.labelImageBox
		position: relative
		width: 100%
		padding: 15px 0

		.title
			text-align: center

		.label,
		.image
			padding: 5px
			text-align: center
			font-size: 0

		.label
			height: 20px
			font-size: 16px
			color: #e50005
			a
				color: #ef0005
				text-decoration: none
			a:hover
				text-decoration: underline
		.label.withIcon
			height: 40px
			img
				margin: -7px 0 0 -22px
				padding-right: 7px
				vertical-align: middle
				height: 100%

		.image > *
			display: inline-block
			font-size: 0
			box-sizing: border-box
		
		.image > img,
		.image a > img
			width: 100%

	.labelImageBox.twoRows td
		padding: 5px 25px
	.labelImageBox.threeRows td
		padding: 5px 15px
	.labelImageBox.fourRows td
		padding: 5px 10px
	.labelImageBox.fiveRows td
		padding: 5px


// text-image-bar
//=================================================
	.textImageBar
		display: block
		position: relative
		padding: 15px 0px

		table
			width: 100%

		.textBox
			.label
				color: #e50005
				font-size: 20px
				padding: 0 0 10px 0

			.label.withIcon
				height: 40px
				padding: 0
				img
					margin-top: -7px
					padding-right: 7px
					vertical-align: middle
					height: 100%

			.text
				color: #333
				font-size: 16px
				line-height: 32px
				text-align: justify

			.learnMore
				display: inline-block
				margin: 10px 7px
				padding: 3px
				height: 30px
				text-decoration: none
				box-sizing: border-box
				> *
					color: #08c
			.learnMore:hover
				border-bottom: 1px solid #08c
			.learnMore
				.icon
					padding: 0 0 0 10px


		.image
			width: 50%
			img
				width: 100%

		.right
			padding-left: 20px
		.left
			padding-right: 20px

	.textImageBar.smallImage
		.image
			width: 35%

// YouTube
//=================================================
	.youtube
		position: relative
		padding: 15px 0
		text-align: center

		> iframe
			display: inline-block
			font-size: 0


