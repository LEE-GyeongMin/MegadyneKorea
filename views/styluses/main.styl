// Variables
//=================================================
bodyWidth = 1000

numOfSlides = 4
sliderHeight = 300
sliderButtonWidth = 21
sliderButtonHeight = 53

// GLOBAL
//=================================================
body > .main
	.container
		position: relative
		width: (bodyWidth) px
		margin: 0 auto

	.boxShadow
		box-sizing: border-box
		border: 1px solid #ccc
		border-top: none
		border-bottom-color: #bbb
		box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.3);

	.boxShadow.border
		border: 1px solid #e50005

	.border
		border: 1px solid #e50005
		box-sizing: border-box

	.title
		font-size: 2em
		color: #e50005

	.subtitle
		font-size: 1.5em
		color: #e50005

	.title.center,
	.subtitle.center
		text-align: center

	.title.paddingVertical,
	.subtitle.paddingVertical
		padding: 30px 0 15px 0

	.text
		font-size: 1em
		text-align: justify

	a.imageLink
		font-size: 0

	ol,
	ul
		margin-bottom: 15px
		padding: 0 0 0 2em

		color: #333
		font-size: 1em
		line-height: 1.8em
		text-align: justify
	
	ol
		list-style-type: decimal
		> li
			margin-bottom: 10px
	ul
		list-style-type: disc

	table.twoRows
		td
			width: 50%
	
	table.threeRows
		td
			width: (100 / 3) %

	table.fiveRows
		td
			width: (100 / 5) %

	.horizontalList
		text-align: center
		font-size: 0
	.horizontalList > *
		display: inline-block
		position: relative

	.horizontalList.twoRows > *
		width: (100 / 2) %
	.horizontalList.threeRows > *
		width: (100 / 3) %
	.horizontalList.fourRows > *
		width: (100 / 4) %
		
	.horizontalList .label
		position: absolute
		width: 100%
		height: 30px
		bottom: 0px
		
		background-color: #2a2a2a

		font-size: 15px
		text-align: center

		color: #ff2e2e

		.verticalAligner
			display: inline
			width: 0px
			height: 100%
			margin-top: 2px
			vertical-align: middle


// Product Browser
//=================================================
	.productBrowser
		position: absolute
		width: 100%
		height: 180px
		top: 0
		left: 0
		background: url("/images/products/bg-product-browser.png")

// Banner
//=================================================
	.banner
		width: 100%
		padding: 0 0 15px 0
		img
			width: 100%

// Article
//=================================================
	.article
		position: relative
		padding: 15px 100px
		.title,
		.subtitle,
		.text
			line-height: 2em
		.title
			text-align: center
		.text
			color: #333

// label-image--box
//=================================================
	.labelImageBox
		position: relative
		width: 100%
		padding: 15px 0

		.title
			text-align: center

		.label,
		.image
			padding: 5px
			text-align: center
			font-size: 0

		.label
			height: 25px
			font-size: 1em
			color: #e50005
			img
				margin-left: -22px
				padding-right: 7px
				vertical-align: middle
				height: 100%
			.text
				color: #e50005
				text-decoration: none
			a.text:hover
				text-decoration: underline
		
		.label.large
			height: 35px
			font-size: 1.2em

		.image > *
				display: inline-block
				font-size: 0
				box-sizing: border-box

				img
					width: 100%

	.labelImageBox.twoRows
		.left > *
			margin-left: 30%
		.right > *
			margin-right: 30%

	.labelImageBox.fiveRows
		td
			padding: 5px
		.label
			height: 20px

// text-image-bar
//=================================================
	.textImageBar
		display: block
		position: relative
		padding: 15px 0px

		table
			width: 100%

		.textBox
			.label
				color: #e50005
				font-size: 1.4em
				padding: 0 0 10px 0

			.label.withIcon
				height: 40px
				padding: 0
				img
					margin-top: -10px
					padding-right: 7px
					vertical-align: middle
					height: 100%

			.text
				color: #333
				font-size: 1em
				line-height: 1.8em
				text-align: justify

			.learnMore
				display: inline-block
				margin: 10px 7px
				padding: 3px
				height: 30px
				text-decoration: none
				box-sizing: border-box
				> *
					color: #08c
			.learnMore:hover
				border-bottom: 1px solid #08c
			.learnMore
				.icon
					padding: 0 0 0 10px


		.image
			width: 50%
			img
				width: 100%

		.right
			padding-left: 20px
		.left
			padding-right: 20px

	.textImageBar.smallImage
		.image
			width: 35%

// YouTube
//=================================================
	.youtube
		position: relative
		padding: 15px 0
		text-align: center

		> iframe
			display: inline-block
			font-size: 0


// Slider
//=================================================
	.sliderContainer
		position: relative
		padding: 0 0 20px 0

		.positioner
			display: block
			position: relative
			width: 100%
			height: (sliderHeight) px
			overflow: hidden

		.slider
			position: absolute
			left: (-100 * floor(numOfSlides / 2)) %
			width: (100 * numOfSlides) %
			height: 100%

			.content
				display: block
				position: absolute
				width: (100 / numOfSlides) %
				height: 100%
				> img
					width: 100%
					height: 100%
			for idx in range(1, numOfSlides)
				.content:nth-of-type({idx})
					left: ((100 / numOfSlides) * (idx - 1)) %

		.slider.ie8
			left: 0

		.slider.moveLeft,
		.slider.moveRight
			animation-duration: 0.4s
			animation-timing-function: ease-in-out
			animation-fill-mode: forwards
		.slider.moveLeft
			animation-name: moveLeft
		.slider.moveRight
			animation-name: moveRight

		.sliderCtrl
			position: absolute
			width: 1060px
			left: -30px
			top: (sliderHeight / 2) px
			margin-top: -(sliderButtonHeight / 2) px

			a
				display: block
				position: absolute
				width: (sliderButtonWidth) px
				height: (sliderButtonHeight) px
				cursor: pointer
			.toLeft
				background: url("/images/arrow-left.png") no-repeat
			.toRight
				right: 0px
				background: url("/images/arrow-right.png") no-repeat


// Slider Animation
//=================================================
@keyframes moveLeft {
	from { transform: translateX(0); }
	to { transform: translateX((100 / numOfSlides) %); }
}

@keyframes moveRight {
	from { transform: translateX(0); }
	to { transform: translateX(-(100 / numOfSlides) %); }
}

