// Variables
//=================================================
bodyWidth = 1000

numOfSlides = 4
sliderHeight = 300
sliderButtonWidth = 21
sliderButtonHeight = 53

body > .main
	.container
		position: relative
		width: (bodyWidth) px
		margin: 0 auto

	.box-shadow
		box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.3);

	.border
		border: 1px solid #c9c9c9

// Product Browser
//=================================================
	.product-browser
		position: absolute
		width: 100%
		height: 180px
		top: 0
		left: 0
		background: url("/images/products/bg-product-browser.png")

// Banner
//=================================================
	.banner
		width: 100%
		padding: 0 0 15px 0
		img
			width: 100%

// Article
//=================================================
	.article
		padding: 15px 100px
		.title,
		.subtitle,
		.text
			line-height: 2em
		.title
			font-size: 2em
			text-align: center
			color: #e50005
		.subtitle
			font-size: 1.5em
			color: #e50005
		.text
			color: #333
			font-size: 1em
			text-align: justify

// Thumbnail Box
//=================================================
	.thumbnail-box
		position: relative
		width: 100%
		padding: 15px 0

		.label,
		.thumbnail
			padding: 10px
			text-align: center
			font-size: 0

		.label
			height: 40px
			font-size: 1.3em
			color: #e50005
			img
				margin-left: -22px
				padding-right: 7px
				vertical-align: middle
				height: 100%

		.thumbnail
			a
				display: inline-block
				font-size: 0
				box-sizing: border-box
			img
				width: 100%

	.thumbnail-box.two-rows
		.label,
		.thumbnail
			width: 50%

		.left > *
			margin-left: 30%
		.right > *
			margin-right: 30%
	
	.thumbnail-box.three-rows
		.label,
		.thumbnail
			width: (100 / 3) %

// Thumbnail Bar
//=================================================
	.thumbnail-bar
		display: block
		position: relative
		padding: 0 70px

		table
			width: 100%
			padding: 30px
			border-bottom: 2px dashed #e50005

		.label
			height: 40px
			padding: 0 0 15px 0
			font-size: 1.3em
			color: #e50005
			img
				padding-right: 7px
				vertical-align: middle
				height: 100%
		.summary
			.text
				color: #333
				font-size: 1em
				line-height: 1.8em
				text-align: justify
			.learn-more
				margin: 0 7px
				padding: 3px
				line-height: 3em
				text-decoration: none
				> *
					color: #08c
			.learn-more:hover
				border-bottom: 1px solid #08c
			.learn-more
				.icon
					padding: 0 0 0 10px

		.thumbnail
			width: 300px
			padding: 10px 0 10px 30px


// YouTube
//=================================================
	.youtube
		position: relative
		padding: 15px 0
		text-align: center

		> iframe
			display: inline-block
			font-size: 0


// Slider
//=================================================
	.sliderContainer
		position: relative
		padding: 0 0 20px 0

		.positioner
			display: block
			position: relative
			width: 100%
			height: (sliderHeight) px
			overflow: hidden

		.slider
			position: absolute
			left: (-100 * floor(numOfSlides / 2)) %
			width: (100 * numOfSlides) %
			height: 100%

			.content
				display: block
				position: absolute
				width: (100 / numOfSlides) %
				height: 100%
				> img
					width: 100%
					height: 100%
			for idx in range(1, numOfSlides)
				.content:nth-of-type({idx})
					left: ((100 / numOfSlides) * (idx - 1)) %

		.slider.ie8
			left: 0

		.slider.moveLeft,
		.slider.moveRight
			animation-duration: 0.4s
			animation-timing-function: ease-in-out
			animation-fill-mode: forwards
		.slider.moveLeft
			animation-name: moveLeft
		.slider.moveRight
			animation-name: moveRight

		.sliderCtrl
			position: absolute
			width: 1060px
			left: -30px
			top: (sliderHeight / 2) px
			margin-top: -(sliderButtonHeight / 2) px

			a
				display: block
				position: absolute
				width: (sliderButtonWidth) px
				height: (sliderButtonHeight) px
				cursor: pointer
			.toLeft
				background: url("/images/arrow-left.png") no-repeat
			.toRight
				right: 0px
				background: url("/images/arrow-right.png") no-repeat


// Slider Animation
//=================================================
@keyframes moveLeft {
	from { transform: translateX(0); }
	to { transform: translateX((100 / numOfSlides) %); }
}

@keyframes moveRight {
	from { transform: translateX(0); }
	to { transform: translateX(-(100 / numOfSlides) %); }
}

