// Variables
//=================================================
bodyWidth = 1000

numOfSlides = 4
sliderHeight = 300
sliderButtonWidth = 21
sliderButtonHeight = 53

body > .main
	.container
		position: relative
		width: (bodyWidth) px
		margin: 0 auto

	.boxShadow
		box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.3);

	.border
		border: 1px solid #e50005

	.title
		font-size: 2em
		color: #e50005

	.subtitle
		font-size: 1.5em
		color: #e50005

	.title.center,
	.subtitle.center
		text-align: center

	.title.paddingTop,
	.subtitle.padding-top
		padding-top: 15px

	.text
		font-size: 1em
		text-align: justify

	ol,
	ul
		padding: 0 0 0 2em
	
	ol
		list-style-type: decimal
	ul
		list-style-type: disc 

// Product Browser
//=================================================
	.productBrowser
		position: absolute
		width: 100%
		height: 180px
		top: 0
		left: 0
		background: url("/images/products/bg-product-browser.png")

// Banner
//=================================================
	.banner
		width: 100%
		padding: 0 0 15px 0
		img
			width: 100%

// Article
//=================================================
	.article
		position: relative
		padding: 15px 100px
		.title,
		.subtitle,
		.text
			line-height: 2em
		.title
			text-align: center
		.text
			color: #333

// label-image--box
//=================================================
	.labelImageBox
		position: relative
		width: 100%
		padding: 15px 0

		.title
			text-align: center

		.label,
		.image
			padding: 10px
			text-align: center
			font-size: 0

		.label
			height: 40px
			font-size: 1.3em
			color: #e50005
			img
				margin-left: -22px
				padding-right: 7px
				vertical-align: middle
				height: 100%

		.image
			a
				display: inline-block
				font-size: 0
				box-sizing: border-box
			img
				width: 100%

	.labelImageBox.twoRows
		.label,
		.image
			width: 50%

		.left > *
			margin-left: 30%
		.right > *
			margin-right: 30%
	
	.labelImageBox.threeRows
		.label,
		.image
			width: (100 / 3) %

// text-image-bar
//=================================================
	.textImageBar
		display: block
		position: relative
		padding: 15px 0

		table
			width: 100%

		.summary
			.label
				height: 40px
				padding: 0 0 15px 0
				font-size: 1.3em
				color: #e50005
				img
					padding-right: 7px
					vertical-align: middle
					height: 100%
				.subtitle
					font-size: 1em
			.text
				color: #333
				font-size: 1em
				line-height: 1.8em
				text-align: justify
			.learnMore
				margin: 0 7px
				padding: 3px
				line-height: 3em
				text-decoration: none
				> *
					color: #08c
			.learnMore:hover
				border-bottom: 1px solid #08c
			.learnMore
				.icon
					padding: 0 0 0 10px


		.image
			width: 50%
			padding: 10px 30px

			img
				width: 100%

	.textImageBar.articleWidth
		padding: 15px 100px

	.textImageBar.articleWidth.borderBottom
		padding: 0 70px
		table
			padding: 20px 30px
			border-bottom: 2px dashed #e50005

// YouTube
//=================================================
	.youtube
		position: relative
		padding: 15px 0
		text-align: center

		> iframe
			display: inline-block
			font-size: 0


// Slider
//=================================================
	.sliderContainer
		position: relative
		padding: 0 0 20px 0

		.positioner
			display: block
			position: relative
			width: 100%
			height: (sliderHeight) px
			overflow: hidden

		.slider
			position: absolute
			left: (-100 * floor(numOfSlides / 2)) %
			width: (100 * numOfSlides) %
			height: 100%

			.content
				display: block
				position: absolute
				width: (100 / numOfSlides) %
				height: 100%
				> img
					width: 100%
					height: 100%
			for idx in range(1, numOfSlides)
				.content:nth-of-type({idx})
					left: ((100 / numOfSlides) * (idx - 1)) %

		.slider.ie8
			left: 0

		.slider.moveLeft,
		.slider.moveRight
			animation-duration: 0.4s
			animation-timing-function: ease-in-out
			animation-fill-mode: forwards
		.slider.moveLeft
			animation-name: moveLeft
		.slider.moveRight
			animation-name: moveRight

		.sliderCtrl
			position: absolute
			width: 1060px
			left: -30px
			top: (sliderHeight / 2) px
			margin-top: -(sliderButtonHeight / 2) px

			a
				display: block
				position: absolute
				width: (sliderButtonWidth) px
				height: (sliderButtonHeight) px
				cursor: pointer
			.toLeft
				background: url("/images/arrow-left.png") no-repeat
			.toRight
				right: 0px
				background: url("/images/arrow-right.png") no-repeat


// Slider Animation
//=================================================
@keyframes moveLeft {
	from { transform: translateX(0); }
	to { transform: translateX((100 / numOfSlides) %); }
}

@keyframes moveRight {
	from { transform: translateX(0); }
	to { transform: translateX(-(100 / numOfSlides) %); }
}

