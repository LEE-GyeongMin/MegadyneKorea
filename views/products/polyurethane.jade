extends ../layouts/main.jade

block title
	title= title

block links
	+stylesheet("/stylesheets/main.css")

block body
	div.container
		div.banner
			img.box-shadow(src="/images/products/polyurethane/header.jpg")

		+article("폴리우레탄 벨트")
			p.text 동력전달과 선형위치결정에 사용되는 MEGADYNE 폴리우레탄 타이밍벨트는 우수한 강도는 물론 편리한 사용과 유지보수의 용이성까지 고려하여 설계되었습니다. 자주 사용되는 표준과 모든 피치 게이지(㎜)에 대응되는 제품폭을 갖고 있으며, 추가적으로 이들의 양면 조합 여부나 벨트의 폭을 결정할 수 있습니다. 특별주문을 통해 내부 강철심을 케블라(Kevlar)로 대체할 수 있습니다.

		table.sub-page-box.three-rows
			tr
				td.label
					span.text MEGAFLEX
				td.label
					span.text MEGALINEAR
				td.label
					span.text MEGAFLAT
			tr
				td.thumbnail
					a.box-shadow.border(href="/products/polyurethane/megaflex")
						img(src="/images/products/polyurethane/megaflex.jpg")
				td.thumbnail
					a.box-shadow.border(href="/products/polyurethane/megalinear")
						img(src="/images/products/polyurethane/megalinear.jpg")
				td.thumbnail
					a.box-shadow.border(href="/products/polyurethane/megaflat")
						img(src="/images/products/polyurethane/megaflat.jpg")

		table.sub-page-box.two-rows
			tr
				td.label.left
					span.text MEGAPOWER
				td.label.right
					span.text MEGARIB
			tr
				td.thumbnail.left
					a.box-shadow.border(href="/products/polyurethane/megapower")
						img(src="/images/products/polyurethane/megapower.jpg")
				td.thumbnail.right
					a.box-shadow.border(href="/products/polyurethane/megarib")
						img(src="/images/products/polyurethane/megarib.jpg")

