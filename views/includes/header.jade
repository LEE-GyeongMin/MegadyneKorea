div.header
	div.nav
		a.logo(href="/")
			img(src="/images/logo.jpg")
		ul
			- var menus = { about: {url: "/about", title: "ABOUT MEGADYNE"}, products: {url: "/products", title: "PRODUCTS"}, catalogs: {url: "/catalogs", title: "CATALOGS"} }

			each menu in menus
				li
					if menu.url === baseUrl
						a.menu.on(href=menu.url)= menu.title
					else
						a.menu(href=menu.url)= menu.title
